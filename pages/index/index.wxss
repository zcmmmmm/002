/**index.wxss**/
@font-face {
  font-family: "iconfont"; /* Project id 3165656 */
  src: url("//at.alicdn.com/t/font_3165656_5nolnxus9xu.woff2?t=1644386255415")
      format("woff2"),
    url("//at.alicdn.com/t/font_3165656_5nolnxus9xu.woff?t=1644386255415")
      format("woff"),
    url("//at.alicdn.com/t/font_3165656_5nolnxus9xu.ttf?t=1644386255415")
      format("truetype");
}
.header-input {
  border: 1rpx solid #d9dde1;
  margin: 22rpx 36rpx 14rpx 36rpx;
  height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
  font-size: 26rpx;
}
.header-input-placeholder {
  font-family: PingFangSC-Regular, iconfont;
  font-size: 26rpx;
  color: rgba(133, 133, 133, 0.6);
  letter-spacing: 0;
  text-align: left;
  line-height: 30rpx;
  padding-left: 152rpx;
}
.navigator {
  display: flex;
  height: 112rpx;
  padding: 0 24rpx;
  margin-bottom: 6rpx;
}
.navigator-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #2b333b;
  letter-spacing: 0;
  text-align: left;
  line-height: 40rpx;
  position: relative;
}
.navigator-item-img {
  position: relative;
  top: 1rpx;
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}
/* 导航下标高亮 */
.navigator-item.navigator-item-active {
  color: #f01414;
  font-weight: bold;
}
.navigator-item.navigator-item-active::after {
  display: block;
  content: "";
  width: 32rpx;
  height: 8rpx;
  background: #f01414;
  border-radius: 4rpx;
  position: absolute;
  left: 78rpx;
  top: 78rpx;
}
.navigator-item.navigator-recommend.navigator-item-active{
  color: #f01414;
}
.navigator-item.navigator-recommend.navigator-item-active::after{
  background-color: #f01414;
}
.navigator-item.navigator-project.navigator-item-active{
  color: #d48e05;
}
.navigator-item.navigator-project.navigator-item-active::after{
  background-color: #d48e05;
}
.navigator-item.navigator-path.navigator-item-active{
  color: #9447eb;
}
.navigator-item.navigator-path.navigator-item-active::after{
  background-color: #9447eb;
}
.navigator-item.navigator-activity.navigator-item-active{
  color: #14a6f0;
}
.navigator-item.navigator-activity.navigator-item-active::after{
  background-color: #14a6f0;
}
/* 轮播图 */
.swiper {
  height: 232rpx;
}
.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.swiper-item-image {
  width: 562rpx;
  height: 186rpx;
  border-radius: 9.6rpx;
  transition: all 0.5s;
}
/* 当前显示轮播图样式 */
.swiper-item-active .swiper-item-image {
  width: 702rpx;
  height: 232rpx;
  border-radius: 12rpx;
}
/* 实战推荐 */
.recommend {
  margin-top: 32rpx;
}
.recommend-more{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #37f;
  font-weight: bold;
  font-style: 28rpx;
}
.recommend-title {
  font-weight: bold;
  font-size: 28rpx;
  color: #2b333b;
  line-height: 32rpx;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
}
.recommend-no-data{
  height: 60rpx;
  font-size: 24rpx;
  margin-top: 60rpx;
  text-align: center;
  font-weight: bold;
}
.recommend-item {
  display: flex;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
}
.recommend-item-left-image {
  width: 208rpx;
  height: 136rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}
.recommend-item-left{
	position: relative;
}
.recommend-item-left-progress {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #ffffff;
  line-height: 40rpx;
  background: #2b333b;
  border-radius: 12rpx 0 12rpx 0;
  width: 108rpx;
  height: 40rpx;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 96rpx;
}
.recommend-item-left-tag-image{
	width: 80rpx;
	height: 44rpx;
	position: absolute;
	top: -8rpx;
	left: 136rpx;
}

.recommend-item-content {
  width: 470rpx;
  border-bottom: 1px solid #d9dde1;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.recommend-item-content-title {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #2b333b;
  line-height: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.recommend-item-content-tags {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.recommend-item-content-tags view {
  margin-right: 24rpx;
}
.recommend-item-content-tags-price {
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #71777d;
  line-height: 30rpx;
  height: 32rpx;
}
.recommend-item-content-tags-price-active {
  font-family: PingFangSC-Semibold;
  font-weight: bold;
  font-size: 24rpx;
  color: #f01414;
  line-height: 32rpx;
}
.recommend-item-content-tags-notice {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #f20d0d;
  background: rgba(242, 13, 13, 0.1);
  border-radius: 4rpx;
  line-height: 30rpx;
  height: 32rpx;
  text-align: center;
}
.recommend-item-content-tags-level,
.recommend-item-content-tags-count {
  font-family: PingFangSC-Regular, iconfont;
  font-size: 24rpx;
  color: #71777d;
  line-height: 32rpx;
}
/* 活动区样式 */
.activity-item{
  display: flex;
  justify-content: center;
}
.activity-item-image{
  width: 702rpx;
  height: 232rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}